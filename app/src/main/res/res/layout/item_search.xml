<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:id="@+id/rel_place">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_place"
            android:layout_centerHorizontal="true"
            android:id="@+id/place"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200km"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/shape_borderbottom"
        android:layout_toLeftOf="@id/rel_place">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_result_search"
            android:layout_alignParentRight="true"
            android:text="@string/hintSearch"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_result_search"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/hintSearch"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

    </RelativeLayout>




</RelativeLayout>